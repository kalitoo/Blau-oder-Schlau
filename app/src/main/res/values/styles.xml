<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- BUTTON THEMES-->

    <style name="startButtonstyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/pressable_button</item>
        <item name ="android:text">@string/start_button</item>
    </style>

    <style name="quizButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/pressable_button</item>
    </style>

    <!-- TEXT AREA THEMES-->

    <style name="textViewStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/textarea</item>
        <item name=" android:gravity">center</item>
        <item name="android:fontFamily">@font/keepcalm_medium</item>
    </style>

    <style name="scoreTextViewStyle" parent="textViewStyle">

    </style>

    <style name="quizTextViewStyle" parent="textViewStyle">
     <!--   <item name="android:textStyle">bold</item> -->
        <item name="android:textSize">28sp</item>
    </style>






</resources>
